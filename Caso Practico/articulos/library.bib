journal = {2016 ACM/IEEE 7th International Conference on Cyber-Physical Systems, ICCPS 2016 - Proceedings},
title = {{SMT-Based Observer Design for Cyber-Physical Systems under Sensor Attacks}},
year = {2016}
}
